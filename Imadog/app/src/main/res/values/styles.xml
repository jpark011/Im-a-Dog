<?xml version="1.0" encoding="utf-8" ?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example">

    <!-- Base application theme -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Buttons -->

    <style name="RectButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="RectButton.Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/border_black</item>
    </style>

    <style name="RectButton.White">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/border_white</item>
    </style>


    <!-- Labels -->

    <style name="BigTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">48sp</item>
        <item name="customFont">"LeagueSpartan"</item>
    </style>

    <style name="BigSubtitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">26sp</item>
        <item name="customFont">"OSItalic"</item>
    </style>

    <style name="Title" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">26sp</item>
        <item name="customFont">"LeagueSpartan"</item>
    </style>

    <style name="Subtitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="customFont">"OSItalic"</item>
    </style>

    <style name="SmallTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="customFont">"LeagueSpartan"</item>
    </style>





</resources>
