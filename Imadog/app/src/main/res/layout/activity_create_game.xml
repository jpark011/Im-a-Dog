<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_black"
        android:onClick="back" />

    <com.cs446w18.a16.imadog.views.CustomLabel
        android:id="@+id/titleLabel"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="@string/create_game_title"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/separator" />

    <com.cs446w18.a16.imadog.views.CustomLabel
        android:id="@+id/nameLabel"
        style="@style/BigSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Device's name"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <com.cs446w18.a16.imadog.views.CustomButton
        android:id="@+id/createButton"
        style="@style/RectButton.Black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/nameLabel"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="32dp"
        android:onClick="createGame"
        android:text="Create" />


</RelativeLayout>