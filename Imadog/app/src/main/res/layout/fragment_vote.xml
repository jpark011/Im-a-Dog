<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.cs446w18.a16.imadog.views.CustomLabel
        android:id="@+id/subtitleLabel"
        style="@style/Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:layout_centerHorizontal="true"
        android:text="The dog question was"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <com.cs446w18.a16.imadog.views.CustomLabel
        android:id="@+id/titleLabel"
        style="@style/Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="20dp"
        android:text="Here should be the question"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/separator_white" />

    <com.cs446w18.a16.imadog.views.VoteListView
        android:id="@+id/voteListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/timerLabel"
        android:layout_below="@+id/separator"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"/>

    <com.cs446w18.a16.imadog.views.CustomLabel
        android:id="@+id/timerLabel"
        style="@style/BigTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="00:00"
        android:textColor="@color/white"
        android:textAlignment="center"/>



</RelativeLayout>