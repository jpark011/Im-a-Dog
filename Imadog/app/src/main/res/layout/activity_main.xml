<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs446w18.a16.imadog.activities.menu.MainActivity">

    <Button
        android:id="@+id/joinButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createButton"
        android:layout_alignStart="@id/createButton"
        android:layout_marginBottom="63dp"
        android:onClick="joinGame"
        android:text="Join Game" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="createGame"
        android:text="Create Game" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/createButton"
        android:layout_below="@id/createButton"
        android:layout_marginTop="63dp"
        android:onClick="showSettings"
        android:text="Settings" />
</RelativeLayout>
